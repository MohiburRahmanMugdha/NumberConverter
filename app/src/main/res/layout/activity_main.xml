<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <EditText
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_back"
            android:hint="Enter Value"
            android:padding="10dp" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/number_system" />


    </LinearLayout>

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Errors"
        android:textColor="#E53935"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="Results"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/binaryLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Bin"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editbinary"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:enabled="false"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_back"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/copyBin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_copy" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/octalLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Oct"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editoctal"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:enabled="false"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_back"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/copyOct"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_copy" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/decimalLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Dec"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editdecimal"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_back"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/copyDec"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_copy" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/hexadecimalLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Hex"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edithexa"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_back"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/copyHex"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_copy" />

    </LinearLayout>


</LinearLayout>